<% layout('layouts/boilerplate')%>

<div class="container-fluid mt-4">
  <div class="col m-auto bg-light rounded-5 p-2">
    <h3 class="text-center text-success">Liste des Articles</h3>
    <div class="d-flex mb-2"><%- include("./new")%></div>
  </div>
  <form class="d-flex mt-2">
    <input
      id="search"
      class="form-control mb-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
    />
  </form>
  <div class="table-responsive shadow-sm">
    <table
      class="table table-striped table-hover table-borderless text-center sortable"
      width="100"
      id="patientTable"
    >
      <thead class="table-success">
        <tr>
          <th scope="col">NÂ°</th>
          <th scope="col">Titre</th>
          <th scope="col">action</th>
        </tr>
      </thead>
      <tbody id="tablebody">
        <% var i=1 %>
        <% for (article of articles){%>
        <tr>
          <th
            scope="row"
            class="clickable"
            onclick="window.location='/articles/<%=article.id%>'"
          >
            <%= i%> <% i=i+1; %>
          </th>
          <td
            class="clickable"
            onclick="window.location='/articles/<%=article.id%>'"
          >
            <%= article.title %>
          </td>

          <td><%- include("./delete")%></td>
        </tr>
        <% }%>
      </tbody>
    </table>
  </div>
</div>
