<% layout('layouts/boilerplate')%>

<article class="postcard light green headline mt-3">
  <a class="postcard__img_link" href="events/<%= article._id %>">
    <img
      class="postcard__img"
      src="<%= article.picture.url %>"
      alt="<%= article.picture.name %>"
    />
  </a>
  <div class="postcard__text t-dark">
    <h1 class="postcard__title blue text-center"><%= article.title %></h1>
    <div class="postcard__subtitle small">
      <time datetime="2020-05-25 12:00:00">
        <i class="fas fa-calendar-alt mr-2"></i>
        <%=moment(article.date).format("l") %>
      </time>
    </div>
    <div class="postcard__bar"></div>
    <div class="text-muted mb-3" style="white-space: pre-wrap">
      <%= article.resume %>
    </div>
    <div class=" " style="white-space: pre-wrap"><%= article.body %></div>
  </div>
</article>
