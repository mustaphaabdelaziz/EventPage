<button
  id="item2"
  type="button"
  class="btn btn-outline-success"
  data-bs-toggle="modal"
  data-bs-target="#newvideo"
>
<i class="bi bi-camera-video-fill"></i> <%= t("new") %> <%= t("video") %>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="newvideo"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg"
  >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          <%= t("add") %> <%= t("video") %>
        </h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form
          action="/events/<%= MyEvent._id%>/video"
          method="POST"
          class="row needs-validation"
          id="video"
          novalidate
        >
          <div class="form-floating mb-3">
            <input
              id="idtitle"
              name="title"
              type="text"
              class="form-control"
              style="text-transform: capitalize"
              autofocus
              required
            />
            <label for="idtitle" class="form-label"><%= t("title") %></label>
            <div class="valid-feedback"><%= t("good") %></div>
          </div>

          <div class="form-floating">
            <input
              id="idurl"
              name="url"
              style="text-transform: capitalize"
              type="text"
              class="form-control"
              required
            />
            <label for="idurl" class="form-label"><%= t("url") %></label>
            <div class="valid-feedback"><%= t("good") %></div>
          </div>

          <div class="modal-footer mt-4">
            <button
              type="button"
              class="btn btn-outline-danger bg-gradient"
              data-bs-dismiss="modal"
            >
              <%= t("cancel") %>
            </button>
            <button class="btn btn-outline-success"><%= t("add") %></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $("#newvideo").on("shown.bs.modal", function () {
    $(this).find("[autofocus]").focus();
  });
</script>
