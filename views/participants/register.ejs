          <div class="row">
            <a href="/" class="text-center mt-4">
              <img src="/assets/logo.png" alt="" width="150px" height="150px" />
            </a>
            <div class="tab-content">
              <!-- ============================= Register =============================================== -->
              <div
                aria-labelledby="userRegisterTab"
                role="tabpanel"
                class="px-5 my-5 tab-pane fade active show"
                id="userRegisterForm"
              >
              
                <h1 class="my-3 text-center text-primary">Inscription</h1>
                <form
                  class="row g-3 m-2 needs-validation"
                  action="/participants/register"
                  id="personal"
                  method="POST"
                  novalidate
                >
                <div class="form-floating col-md-12">
                  <select
                    id="userRole"
                    name="user[role]"
                    class="form-select"
                    required
                  >
                    <option selected disabled><%= t('role') %></option>
                    <option class="option" value="organizer">
                      <%= t('organizer') %>
                    </option>
                    <option class="option" value="participant">
                      <%= t('participant') %>
                    </option>
                    <option class="option" value="expert"> <%= t('instructor') %></option>
                  </select>
                  <label for="userRole" class="form-label"
                    ><%= t('you are') %></label
                  >
                </div>

                  <div class="form-floating col-md-6">
                    <input
                      id="userFirstName"
                      name="user[firstname]"
                      type="text"
                      class="form-control"
                      required
                    />
                    <label for="userFirstName" class="form-label"
                      ><%= t('firstname') %></label
                    >
                  </div>
                  <div class="form-floating col-md-6">
                    <input
                      id="userLastName"
                      name="user[lastname]"
                      type="text"
                      class="form-control"
                      required
                    />
                    <label for="userLastName" class="form-label"
                      ><%= t('lastname') %></label
                    >
                  </div>

                  <div class="form-floating col-md-6">
                    <input id="userBirthDate" name="user[birthday]" type="date"
                    class="form-control"
                    max="<%=moment().format('YYYY-MM-DD')%>"
                    min="<%=moment("01/01/1900").format('YYYY-MM-DD')%>"
                    required />
                    <label for="userBirthDate" class="form-label"
                      ><%= t('birthdate') %>
                    </label>
                  </div>
                  <div class="form-floating col-md-6">
                    <select
                      id="userGender"
                      name="user[gender]"
                      class="form-select"
                      required
                    >
                      <option selected value="" disabled></option>
                      <option class="option" value="Male">
                        <%= t('male') %>
                      </option>
                      <option class="option" value="Female">
                        <%= t('female') %>
                      </option>
                    </select>
                    <label for="userGender" class="form-label"
                      ><%= t('gender') %></label
                    >
                  </div>
                  <div class="form-floating col-md-6">
                    <input
                      class="form-select"
                      id="city"
                      name="user[city]"
                      list="cities"
                      onchange="makeSubmenu(this.value, '')"
                    />
                    <datalist id="cities">
                      <option class="option" value=""></option>
                      <% for (city of states) { %>
                      <option class="option" value="<%= city.name %>">
                        <%= city.id + " - " + city.name %>
                      </option>
                      <%} %>
                    </datalist>
                    <label for="wilaya" class="form-label">Wilaya</label>
                    <div class="valid-feedback">BIEN</div>
                  </div>

                

                  <div class="form-floating col-md-6">
                    <input
                      id="userEmail"
                      name="user[email]"
                      type="email"
                      class="form-control"
                      required
                    />
                    <label for="userEmail" class="form-label"
                      ><%= t('email') %></label
                    >
                    <div class="valid-feedback">BIEN</div>
                  </div>
             
                  <div class="form-floating col-md-6">
                    <input
                      type="text"
                      class="form-control"
                      id="userPhoneNumber"
                      name="user[phone]"
                      required
                      maxlength="10"
                    />
                    <label for="userPhoneNumber" class="form-label"
                      ><%= t('phone') %></label
                    >
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <div class="form-floating col-md-6">
                    <input
                      type="text"
                      class="form-control"
                      name="user[job]"
                      id="inputAddress2"
                      required
                    />
                    <label for="userJobTitle" class="form-label"
                      ><%= t('job') %></label
                    >
                    <div class="valid-feedback">BIEN</div>
                  </div>

                  
                  

                  <div class="mt-3 text-center">
                    <button
                      type="submit"
                      id="register"
                      class="w-100 btn btn-outline-primary bg-gradient bg-opacity-25"
                    >
                      Inscrire
                      <i class="bi bi-person-plus-fill ms-2"></i>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

        </div>
      </div>
